//- for the modal template to work, the top most element
//- has to be the div.modal in the following format.
div.modal(tabindex='-1', role='dialog', ng-controller='RegisterCtrl')
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', ng-click="$hide()") ×
                h4#myModalLabel.modal-title.text-center 欢迎来到这里，难题夹子期待你的加入！
            .modal-body
                .row
                    .col-xs-10.col-xs-offset-1
                        form(ng-submit="submit()", role="form")
                            .form-group
                                input.form-control(type="email", icon="envelope", placeholder="你的邮箱邮件地址", required)
                            .form-group
                                input.form-control(type="text", icon="user", placeholder="创建一个用户名吧！", required)
                            .form-group
                                input.form-control(type="password", icon="flash", placeholder="请输入一个密码", required)
                            .form-group
                                input.form-control(type="password", icon="flash", placeholder="请再次输入密码以确认", required)
                            .form-group.row
                                .col-xs-4.no-right-padding
                                    input.form-control(type="text", icon="flash", placeholder="姓", required)
                                .col-xs-8
                                    input.form-control(type="text", icon="flash", placeholder="名", required)
