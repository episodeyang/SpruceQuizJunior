//- for the modal template to work, the top most element
//- has to be the div.modal in the following format.
div.modal(tabindex='-1', role='dialog', ng-controller='RegisterCtrl')
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', ng-click="$hide()") ×
                h4#myModalLabel.modal-title.text-center 欢迎来到这里，难题夹子期待你的加入！
            .modal-body
                .row
                    .col-xs-10.col-xs-offset-1
                        form(ng-submit="submit()", role="form")
                            .form-group
                                input.form-control(type="email", ng-model="registerData.email", placeholder="你的邮箱邮件地址", required)
                            .form-group
                                input.form-control(type="text", ng-model="registerData.username", placeholder="创建一个用户名吧！", required)
                            .form-group
                                input.form-control(type="password", ng-model="registerData.password", placeholder="请输入一个密码", required)
                            .form-group
                                input.form-control(type="password", ng-model="registerData.passwordConfirm", placeholder="请再次输入密码以确认", required)
                            .form-group.row
                                .col-xs-3.no-right-padding
                                    input.form-control(type="text", ng-model="registerData.lastName", placeholder="姓", required)
                                .col-xs-3.no-right-padding
                                    input.form-control(type="text", ng-model="registerData.firstName", placeholder="名", required)
                                .col-xs-6
                                    input.form-control(type="text", ng-model="registerData.birthdayString", placeholder="生日 1995 05 03", required)
                            .form-group
                                .row
                                    .col-xs-4
                                        label.btn.no-left-padding
                                            span 请选择您的身份
                                    .col-xs-8
                                        .btn-group.btn-group-justified.pull-right(ng-model='registerData.role', bs-radio-group='bs-radio-group')
                                            label.btn.btn-default
                                                input.btn.btn-default(type='radio', value='student')
                                                | 学生
                                            label.btn.btn-default
                                                input.btn.btn-default(type='radio', value='teacher')
                                                | 教师
                                            label.btn.btn-default
                                                input.btn.btn-default(type='radio', value='parent')
                                                | 家长
                            .form-group
                                .row
                                    .col-xs-12.short-bottom-margin
                                        label.btn.no-left-padding
                                            span 我们是应该用“他”，还是“她”呢？ ：）
                                    .col-xs-8.col-xs-offset-4
                                        .btn-group.btn-group-justified.pull-right(ng-model='registerData.gender', bs-radio-group='bs-radio-group')
                                            label.btn.btn-default
                                                input.btn.btn-default(type='radio', value='male')
                                                | 我是男生~
                                            label.btn.btn-default
                                                input.btn.btn-default(type='radio', value='female')
                                                | 我是女生！
                            .form-group
                                input.form-control(type="text", ng-model="registerData.schoolName", placeholder="你的学校叫什么名字？")
                            //-    .warining
                            //-        p.text-semi-white(ng-repeat="(errorType, error) in errors") {{error}}
                            button.pull-right.btn.btn-info(type='submit') 加入我们！
        .modal-content.short-top-margin.bg-transparent(ng-if="view.error", ng-show="view.error")
            div.alert.alert-warning.no-bottom-margin
                p {{view.error}}
