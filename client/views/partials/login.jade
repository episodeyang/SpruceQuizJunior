//- for the modal template to work, the top most element
//- has to be the div.modal in the following format.
div.modal(tabindex='-1', role='dialog', ng-controller="LoginCtrl")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', ng-click="$hide()") ×
                h4#myModalLabel.modal-title 难题夹子用户登陆
            .modal-body
                .row
                    .col-sm-12
                        ng-form(ng-submit="submit()", role="form")
                            .form-group
                                input.form-control(type='text', placeholder="用户名", name="username", ng-model="loginData.username", required)
                            .form-group
                                input.form-control(type='password', placeholder="密码", name="password", ng-model="loginData.password", required)
                            .checkbox.pull-left.short-top-margin
                                label
                                    input(type="checkbox", name="rememberme", ng-model="loginData.rememberme")
                                    | 记住我
                            button.pull-right.btn.btn-primary(type='submit', ng-click="submit()") 登陆
                            button.pull-right.btn.btn-warning.right-margin(ng-click='$hide()', nonrequired) 取消
                            div {{loginData.userame}}
                            div {{userame}}
            //-.modal-footer
            //-    button.btn.btn-default(type='button', ng-click="$hide()") Close
            //-    button.btn.btn-primary(type='button', ng-click="ok()") Save changes
        .modal-content.short-top-margin.bg-transparent(ng-if="view.error", ng-show="view.error")
            div.alert.alert-warning.no-bottom-margin
                p {{view.error}}
