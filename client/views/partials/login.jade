                                        input.span12(type="password", data-ng-model="password", placeholder="在这里输入密码",
                                        name="password",
                                        required)
                                .row-fluid
                                    .span8.offset2
                                        label(for="rememberme").checkbox
                                            input(type="checkbox", data-ng-model="rememberme", name="rememberme")
