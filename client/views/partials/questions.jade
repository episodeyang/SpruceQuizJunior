include mixins/navbar
include mixins/footer
link(href='/css/questions.css', rel="stylesheet")
div.background(background-img="/img/bg-brown.jpg")
#cover(data-ng-hide="appInitialized", data-ng-animate="{ hide: 'fade-hide' }")
.body(konami='debug.alert()')
    +navbar
    .alert-box(ng-show='error', ng-click="errorClear()")
        p.title {{error.title || error}}
            a.pull-right.small(ng-show="error.details", ng-click="view.error.show=show") 细节
        .details(ng-hide='view.error.show')
            p {{error.details}}
    .container
        .row
            .col-sm-7.col-sm-offset-2.col-xs-12
                ul.nav.nav-pills.pull-right
                    li
                        a(href='/') 问题
                    li
                        a 分类
                    li
                        a 用户
                    li
                        a 待回答
        .row
            .col-sm-2.col-xs-3
                ul.nav.nav-pills.nav-stacked(ng-hide="view.state=='question'")
                    li(ng-class="{active: view.state=='search'}")
                        a.text-center(ng-click="view.state='search'") 所有问题
                    li(ng-class="{active: view.state=='ask'}")
                        a.text-center(ng-click="view.state='ask'") 提问
                //ul.nav.nav-pills.nav-stacked(ng-show="view.state=='question'")
                //    li
                //        //-(ng-class="{active: view.state=='question'}")
                //        a.text-center 返回
            .col-sm-7.col-xs-9
                div(ng-show="view.state=='search'")
                    .input-group
                        input(type='text').form-control
                        span.input-group-btn
                            button.btn.btn-info(type='button') 搜索
                    .flow-container
                        .row
                            .col-lg-12
                                a.editor.short.top-margin(ng-repeat="question in Model.questions", ng-href="/questions/{{question.id}}")
                                    //-.row
                                        .col-lg-11.col-sm-push-1.col-xs-10.col-xs-push-2
                                            h4.no-margin {{question.title}}
                                            hr.low-margin
                                    .row
                                        div.col-sm-11.col-sm-push-1.col-xs-10.col-xs-push-2
                                            h4.no-top-margin.bottom-margin
                                                b {{question.title}}
                                            //hr.low-margin
                                            div(ng-bind-html="Model.stripHtml(question.text, 90) + '......'")
                                        .col-sm-1.col-sm-pull-11.col-xs-2.col-xs-pull-10.stat-box-container
                                            .rounded.bg-blue.stat-box(ng-class="{'bg-red':question.vote < 0 , 'bg-blue': question.vote > 0 }")
                                                h4.no-bottom-margin.text-center {{question.vote}}
                                                p.no-top-margin.text-center.small 投票
                                            .rounded.stat-box.appendix(ng-class="{'bg-grey':question.nAnswers <= 0 , 'bg-green': question.nAnswers > 0 }")
                                                p.no-bottom-margin.text-center.small {{question.nAnswers}}
                                                p.no-top-margin.text-center.small 回答
                div(ng-show="view.state=='ask'")
                    //.input-group
                    //    span.input-group-btn
                    //        button.btn.btn-default(type='button') 标题
                    input(type='text', placeholder="标题", ng-model="editor.data.title").form-control
                    form.editor.tall.top-margin(name = 'questionEditor')
                        div.editor-inner(ng-model='editor.data.text', medium-editor, options="{{editor.options}}")
                    div.bottom-margin.top-margin
                        a.badge(ng-repeat-start='tag in editor.data.tags track by $index') {{tag}}
                        span(ng-repeat-end) &nbsp&nbsp
                    input(type='text', placeholder="问题标签", ng-model="editor.tagText").form-control.bottom-margin
                    .row
                        .col-xs-12
                            button.btn.btn-link(ng-click='example()') 问题模板
                            button.btn.btn-link(ng-click='toggleHtml()', ng-hide='editor.showHtml') 文本代码
                            button.btn.btn-link.pull-right(ng-click='toggleHtml()', ng-show='editor.showHtml') 关闭代码窗口
                            button.btn.btn-success.pull-right(ng-hide='editor.showHtml', ng-click='editor.submit()') 提交问题
                    form.editor.tall(ng-show='editor.showHtml')
                        p {{editor.data.text}}
                div(ng-show="view.state.split('.')[0]=='question'")
                    div(ng-show="view.state=='question.edit'")
                        input(type='text', placeholder="标题", ng-model="editor.data.title").form-control
                        form.editor.tall.top-margin(name = 'questionEditor')
                            div.editor-inner(ng-model='editor.data.text', medium-editor, options="{{editor.options}}")
                        div.bottom-margin.top-margin
                            a.badge(ng-repeat-start='tag in editor.data.tags track by $index') {{tag}}
                            span(ng-repeat-end) &nbsp&nbsp
                        input(type='text', placeholder="问题标签", ng-model="editor.tagText").form-control.bottom-margin
                        .row
                            .col-xs-12
                                button.btn.btn-link(ng-click='example()') 问题模板
                                button.btn.btn-link(ng-click='toggleHtml()', ng-hide='editor.showHtml') 文本代码
                                button.btn.btn-link.pull-right(ng-click='toggleHtml()', ng-show='editor.showHtml') 关闭代码窗口
                                button.btn.btn-info.pull-right(ng-hide='editor.showHtml', ng-click='editor.submit()') 确定修改
                                button.btn.btn-danger.pull-right.right-margin(ng-hide='editor.showHtml', ng-click='editor.submit()') 删除
                        form.editor.tall(ng-show='editor.showHtml')
                            p {{editor.data.text}}
                    div(ng-show="view.state=='question'")
                        h3.title.bottom-margin {{Model.question.title}}
                        form.editor.top-margin
                            .fixed-left
                                .rounded.bg-grey.transparent.vote-box
                                    p.text-center
                                        a(ng-click='Model.voteup(Model.question)')
                                            span.up.glyphicon.glyphicon-chevron-up(ng-class='{glow: Model.question.votedup}')
                                    h3.text-center.no-margin {{Model.question.vote}}
                                    p.text-center
                                        a(ng-click='Model.votedown(Model.question)')
                                            span.down.glyphicon.glyphicon-chevron-down(ng-class='{glow: Model.question.voteddown}')
                            div.editor-inner(ng-bind-html="Model.question.text")
                        div(style='margin-top:-5px;margin-bottom:15px;')
                            a.badge(ng-repeat-start='tag in Model.question.tags track by $index') {{tag}}
                            span(ng-repeat-end) &nbsp&nbsp
                        .row
                            .col-xs-12
                                a.right-spaced.small(ng-click="view.state = 'question.edit'; editor.data = Model.question") 编辑问题
                                a.right-spaced.small 评论
                                p.pull-right
                                    span {{Model.question.dateCreated}} 由
                                    a.blue.spaced(ng-href="/users/{{Model.question.author.username}}") {{ Model.question.author.name || Model.question.author.username }}
                                    span 创建
                    .row
                        .col-xs-12(ng-repeat='comment in Model.question.comments')
                            hr.low-margin
                            p.small
                                span.badge.margin-right {{comment.votes}}
                                span {{comment.text}}
                                span &#8212&nbsp
                                    a.blue {{comment.author}}
                    br
                    h3(ng-show="Model.question.nAnswers")
                        b 大家的回答

                    form.editor.top-margin(ng-repeat-start="answer in Model.question.answers")
                        .fixed-left
                            .rounded.grey.transparent.vote-box
                                p.text-center
                                    a(ng-click='answer.downvote()')
                                        span.up.glyphicon.glyphicon-chevron-up
                                h3.text-center {{answer.vote}}
                                p.text-center
                                    a(ng-click='answer.downvote()')
                                        span.down.glyphicon.glyphicon-chevron-down
                        div.editor-inner(ng-bind-html="answer.text")
                    .row
                        .col-xs-12
                            a.right-spaced.small 编辑回答
                            a.right-spaced.small 评论
                            p.pull-right
                                span {{answer.dateCreated}} 由
                                a.blue.spaced(ng-href="/users/{{answer.author.username}}") {{ answer.author.name || answer.author.username || answer.author }}
                                span 创建
                    .row(ng-repeat-end)
                        .col-xs-12(ng-repeat='comment in answer.comments')
                            hr.low-margin
                            p.small
                                span.badge.margin-right {{comment.votes}}
                                span {{comment.text}}
                                span &#8212&nbsp
                                    a.blue {{comment.author}}

                    //hr
                    br
                    h3 你的回答
                    form.editor.short(name = 'answerEditor')
                        div.editor-inner(ng-model='editor.text', medium-editor, options="{{editor.answerOptions}}")
                    .row
                        .col-xs-12
                            button.btn.btn-success.pull-right() 提交解答
                    .row
                        .col-xs-12
                            br






            .col-sm-3.hidden-xs
                .panel.panel-info
                    .panel-heading 相关标签
                    .panel-body
                        p(ph-txt='3s')
                .panel.panel-info
                    .panel-heading 相关问题
                    .panel-body
                        p(ph-txt='3s')

