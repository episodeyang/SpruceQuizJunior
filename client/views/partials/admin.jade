        alert(close="closeAlert()")
            | TODO: 在这里显示教师头像，
        hr
    .span8
        tabset
            //with angular-ui 5.0 (next release), should be able to
            //do: .tabbable.tabs-below left right.
            //TODO for now only select 'u0001'
            tab(heading="学生名单")
                div(collapse="isCollapsed")
                    //-You do you data binding here, so that when this list is cleaned up, you can
                    //-hide this entire division.
                    h4.pull-left 新增学生 &nbsp;
                    span.pull-left(style="padding-top:3px;")
                        button.btn.btn-success(ng-click="isCollapsed=!isCollapsed") 清空通知
                    div.pull-right(style="padding-top:3px;")
                        form.form-search
                            input.span12.search-query(placeholder="搜索学生(随打即搜)",ng-model="newStudentQuery")
                    table.table.table-striped(data-ng-hide="loading")
                        thead
                            tr
                                th 编号
                                th 姓名
                                th 性别
                                th 班级
                                th 学校
                                th 邮箱
                                th 电话
                                th 住址

                        tbody

                            tr(data-ng-repeat="student in students|filter:'u0001'|filter:newStudentQuery")
                                td {{ student.userUUID }}
                                td {{ student.firstName}} {{student.lastName}}
                                td {{ student.sex}}
                                td {{ student.sections}}
                                td {{ student.schools}}
                                td {{ student.email}}
                                td {{ student.phone}}
                                td {{ student.address}}

                    hr
                h4.pull-left 学生列表
                div.pull-right(style="padding-top:3px;")
                    form.form-search
                        input.span12.search-query(placeholder="搜索学生(随打即搜)",ng-model="studentQuery.$")
                table.table.table-striped(data-ng-hide="loading")
                    thead
                        tr
                            th 
                            th 编号
                            th 姓名
                            th 性别
                            th 班级
                            th 学校
                            th 邮箱
                            th 电话
                            th 住址

                    tbody
                        tr(data-ng-repeat="student in students|filter:studentQuery")
                            td 
                                i.icon-pencil(ng-click="modalShow=!modalShow")
                            td {{ student.userUUID }}
                                div(modal="modalShow", close="modalShow=false").well
                                    //the call back sets the parameter flase again.
                                    div.modal-header 编辑 {{student.userUUID}} 信息
                                    div.modal-body
                                        {{student.userUUID}}
                                        .row-fluid
                                            input.span12(type="text", placeholder="type here", ng-model="expression")
                                            div {{expression}}
                                    div.modal-footer
                                        button.btn.btn-success 提交
                            td {{ student.firstName}} {{student.lastName}}
                            td {{ student.sex}}
                            td {{ student.sections}}
                            td {{ student.schools}}
                            td {{ student.email}}
                            td {{ student.phone}}
                            td {{ student.address}}

            tab(heading="教师名单")
                h4.pull-left 教师列表
                div.pull-right(style="padding-top:3px;")
                    form.form-search
                        input.span12.search-query(placeholder="搜索教师(随打即搜)",ng-model="teacherQuery.$")
                table.table.table-striped(data-ng-hide="loading")
                    thead
                        tr
                            th 
                            th 编号
                            th 姓名
                            th 班级
                            th 学校

                    tbody
                        tr(data-ng-repeat="teacher in teachers|filter:teacherQuery")
                            td 
                                i.icon-pencil(ng-click="modalShow=!modalShow")
                            td {{ teacher.userUUID }}
                                div(modal="modalShow", close="modalShow=false").well
                                    //the call back sets the parameter flase again.
                                    div.modal-header 编辑 {{teacher.userUUID}} 信息
                                    div.modal-body
                                        {{teacher.userUUID}}
                                        .row-fluid
                                            input.span12(type="text", placeholder="type here", ng-model="expression")
                                            div {{expression}}
                                    div.modal-footer
                                        button.btn.btn-success 提交
                            td {{ teacher.teacherName}}
                            td {{ teacher.sections}}
                            td {{ teacher.schools}}
            tab(heading="新增用户")
                h4 学生
                table.table.table-striped(data-ng-hide="loading")
                    thead
                    tbody
                        tr
                            td adfast
                            td sdfasd
                            td fasdsa
                hr
                h4 教师
                hr
            //Only superuser(admin, teacher) can see the tab below.
            //The tab directive currently does not support this functionality.
            tab(heading="学校")
                h4.pull-left 学校列表
                div.pull-right(style="padding-top:3px;")
                    form.form-search
                        input.span12.search-query(placeholder="搜索学校(随打即搜)",ng-model="schoolQuery.$")
                table.table.table-striped(data-ng-hide="loading")
                    thead
                        tr
                            th 
                            th 编号
                            th 学校名称
                            th 所含班级

                    tbody
                        tr(data-ng-repeat="school in schools|filter:schoolQuery")
                            td 
                                i.icon-pencil(ng-click="modalShow=!modalShow")
                            td {{ school.schoolUUID }}
                                div(modal="modalShow", close="modalShow=false").well
                                    //the call back sets the parameter flase again.
                                    div.modal-header 编辑 {{school.schoolUUID}} 信息
                                    div.modal-body
                                        {{school.schoolUUID}}
                                        .row-fluid
                                            input.span12(type="text", placeholder="type here", ng-model="expression")
                                            div {{expression}}
                                    div.modal-footer
                                        button.btn.btn-success 提交
                            td {{ school.schoolName}}
                            td {{ school.sections}}
            //tab(heading="学校", data-ng-hide='{{false}}')
    .span1
